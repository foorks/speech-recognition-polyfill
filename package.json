  "description": "Polyfill for the Speech Recognition API using Speechly",
  "main": "dist/index.js",
  "types": "./dist/types.d.ts",
  "scripts": {
    "lint": "eslint 'src/**/*.{ts,tsx}'",
    "update-test-harness": "tsc && echo 'FOO' && cp -R dist/ test-harness/src/SpeechlySpeechRecognition && echo 'BAR'",
    "run-test-harness": "cd test-harness && npm i && npm start",
    "dev": "npm-watch update-test-harness & npm run update-test-harness && npm run run-test-harness",
    "test": "echo 'TODO'"
  },
  "watch": {
    "update-test-harness": {
      "patterns": [
        "src"
      ],
      "extensions": "ts"
    }
  },
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.22.0",
